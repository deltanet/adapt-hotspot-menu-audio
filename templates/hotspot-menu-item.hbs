<button role="button" class="base menu-item-hotspot {{#if _hotspotMenuAudio._hotspotMenuItem._buttonIcon._isEnabled}}icon {{_hotspotMenuAudio._hotspotMenuItem._buttonIcon._icon}}{{/if}} {{#if _isVisited}}visited{{/if}} {{#if _isComplete}}complete{{/if}}" style="top:{{_hotspotMenuAudio._hotspotMenuItem._position._top}}%; left:{{_hotspotMenuAudio._hotspotMenuItem._position._left}}%" data-id="{{_id}}">{{_hotspotMenuAudio._hotspotMenuItem.title}}</button>
<div class="menu-item-inner {{#if _locked}}locked{{/if}}">
	<button class="base menu-item-done icon icon-cross"></button>
	<div class="menu-item-title">
		<h5 class="menu-item-title-inner">{{{displayTitle}}}</h5>
	</div>
	<div class="menu-item-body">
		<div class="menu-item-body-inner">{{{body}}}</div>
	</div>
	<div class="menu-item-button">
        <button aria-label="{{linkText}} {{#if _isVisited}}{{_globals._accessibility._ariaLabels.visited}}{{/if}}" class="{{#if _isVisited}}visited{{/if}} {{#if _isLocked}}disabled{{/if}} accessible-text-block" {{#if _isLocked}}disabled="disabled"{{/if}}>
            {{#if _isLocked}}
            {{{_hotspotMenuAudio.linkLockedText}}}
                {{else}}
                {{#if _isVisited}}
                    {{{_hotspotMenuAudio.linkVisitedText}}}
                    {{else}}
                    {{{linkText}}}
                {{/if}}
            {{/if}}
        </button>
        {{#if duration}}
            <span class="menu-item-duration accessible-text-block" role="region" tabindex="0">{{{_hotspotMenuAudio.durationLabel}}} {{{duration}}}</span>
        {{/if}}
    </div>
</div>
