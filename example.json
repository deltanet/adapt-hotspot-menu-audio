// put _hotspotMenuGraphic on menu content object

"_hotspotMenuGraphic": {
    "alt": "alt text",
    "src": "course/en/images/***.jpg"
},
"_audio": {
    "_isEnabled": true,
    "_showControls": false,
    "_autoplay": true,
    "_channel": 0,
    "_location": "top-right",
    "_media": {
        "src": "course/en/audio/***.mp3"
    }
}


// put _hotspotMenuItem on child content objects and use position to place hotspot

"_hotspotMenuItem": {
    "title": "",
    "_buttonIcon": {
        "_isEnabled": true,
        "_icon": "icon-pin"
    },
    "position": {
        "_top":50,
        "_left":50
    }
},
"_audio": {
    "_isEnabled": true,
    "_showControls": false,
    "_autoplay": true,
    "_channel": 0,
    "_location": "top-right",
    "_media": {
        "src": "course/en/audio/***.mp3"
    }
}